<div id='modal-main' data-controller='modal'>
  <div class ='button-container d-flex align-items-center justify-content-center'>
    <div id="map-modal-button" class='map-modal flex-column' data-action="click->modal#toggleMap">
      <span class='map-text' data-modal-target='text'>Show Map</span>
    </div>
  </div>
  <div class="modal-body">
    <div id='map-modal-container' class='modal-hide' data-modal-target='modalContainer'>
      <div id="map" style="width: 100%; height: 80vh;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
