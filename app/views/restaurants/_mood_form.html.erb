<%= form_with method: :get, url: restaurants_path do %>
  <% @tags.each do |tag| %>
    <div class="form-check">
      <input name="tags[]" class="form-check-input" type="checkbox" value="<%= tag %>" id="flexCheckDefault<%= tag %>" <%= "checked" if params[:tags]&.include?(tag) %>>
      <label class="form-check-label" for="flexCheckDefault<%= tag %>">
        <%= tag %>
      </label>
    </div>
  <% end %>
  <%= submit_tag 'Submit', class:"btn btn-primary mt-2 justify-content center" %>
<% end %>
