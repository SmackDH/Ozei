<%= form_with url: restaurants_path, method: :get, class: "d-flex" do |form| %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find restaurant"
  %>
  <%= form.number_field :group_size, in: 1..50, value: params[:group_size] %>
  <% @tags.each do |tag| %>
    <div class="form-check">
      <input name="tags[]" class="form-check-input" type="checkbox" value="<%= tag %>" id="flexCheckDefault<%= tag %>" <%= "checked" if params[:tags]&.include?(tag) %>>
      <label class="form-check-label" for="flexCheckDefault<%= tag %>">
        <%= tag %>
      </label>
    </div>
  <% end %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
