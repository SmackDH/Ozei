<div>
  <div class="card-restaurant">
    <%= link_to restaurant_path(restaurant) do %>
      <img src="https://source.unsplash.com/random/?restaurant" />
      <div class="card-content">
        <div class="card-restaurant-infos">
          <div class="m-3">
            <h2><%= restaurant.name %></h2>
            <p><%= restaurant.category %></p>
            <p>Tags: <%= restaurant.tag_list %></p>
            <h2 class="card-restaurant-pricing"><%= restaurant.price_range %></h2>
          </div>
        </div>
      <% end %>
      <div class="select-card m-3">
        <%= simple_form_for [restaurant, @booking] do |f| %>
          <%= f.input :number_of_people, as: :hidden, input_html: {value: params[:group_size]} %>
          <%= button_tag type: 'submit', class: "btn btn-success" do %>
            Book<i class="bi bi-bag-check m-1"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
