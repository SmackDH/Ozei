<div class="restaurant">
  <%= render 'carousel', restaurant: @restaurant %>
  <div class="restaurant-display">
    <h1><%= @restaurant.name %></h1>
    <p class="address"><%= @restaurant.address %></p>
    <hr>
    <div>
      <div class="restaurant-content">
        <p><%= @restaurant.category %></p>
        <div>
          <i class="fa-solid fa-user-group"></i>
          <%= @restaurant.maximum_number %>
        </div>
        <div class="d-flex">
          <% @restaurant.price_range.length.times do %>
            <i class="fa-solid fa-yen-sign"></i>
          <% end %>
        </div>
        <%# linking to form  %>
        <%# linking to form  %>
        <%= link_to "Restaurants", restaurants_path, class: "reserve-button", style: "float: left;" %>
        #fix modal map after, buttons down are being affected#
      </div>
    </div>
  </div>
</div>
<%= render "show_map" %>
