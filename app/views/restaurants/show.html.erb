<div class="restaurant">
  <%= render 'carousel', restaurant: @restaurant %>
  <div class="restaurant-display">
    <h1><%= @restaurant.name %></h1>
    <p class="address"><%= @restaurant.address %></p>
    <hr>
    <div class="restaurant-content">
      <p><%= @restaurant.category %></p>
      <div>
        <i class="fa-solid fa-user-group"></i>
        <%= @restaurant.maximum_number %>
      </div>
      <div class="d-flex">
        <% @restaurant.price_range.length.times do %>
          <i class="fa-solid fa-yen-sign"></i>
        <% end %>
      </div>
    </div>
    <a class="reserve-button" style="float: right;" href="/bookings">Reserve</a>
  </div>
  <%= render "show_map" %>
</div>
<%= link_to "#check position for back button#", restaurants_path, class: "btn btn-primary" %>
